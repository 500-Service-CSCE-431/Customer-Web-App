<div class="feedback-dashboard">
  <div class="feedback-card">
    <div class="feedback-header">
      <div>
        <h1>Event Feedback Overview</h1>
        <p>Select a month to review captured feedback across events.</p>
      </div>
      <%= link_to 'Back to Calendar', home_path, class: 'feedback-back-btn' %>
    </div>

    <div class="feedback-filters">
      <%= form_with url: admin_feedbacks_path, method: :get, local: true, class: 'filters-form' do |form| %>
        <div class="filter-group">
          <%= form.label :month, 'Month', class: 'filter-label' %>
          <%= form.select :month,
                          Date::MONTHNAMES.compact.each_with_index.map { |name, index| [name, index + 1] },
                          { selected: @selected_month },
                          class: 'filter-select' %>
        </div>
        <div class="filter-group">
          <%= form.label :year, 'Year', class: 'filter-label' %>
          <%= form.select :year,
                          (Date.current.year - 5..Date.current.year + 1).to_a.reverse,
                          { selected: @selected_year },
                          class: 'filter-select' %>
        </div>
        <div class="filter-actions">
          <%= form.submit 'Apply', class: 'filter-apply-btn' %>
        </div>
      <% end %>
    </div>

    <% if @events.any? %>
      <div class="feedback-event-list">
        <% @events.each do |event| %>
          <div class="feedback-event-card">
            <div class="event-summary">
              <div class="event-date">
                <span class="event-day"><%= event.event_date.strftime('%d') %></span>
                <span class="event-month"><%= event.event_date.strftime('%b') %></span>
              </div>
              <div class="event-details">
                <h2><%= event.title %></h2>
                <p class="event-meta">
                  <span><strong>Category:</strong> <%= event.category %></span>
                  <span><strong>Attendees:</strong> <%= event.signup_count %></span>
                </p>
                <p class="event-time"><%= event.event_date.strftime('%A â€¢ %B %d, %Y at %I:%M %p') %></p>
              </div>
            </div>

            <div class="feedback-entries">
              <% if event.event_feedbacks.any? %>
                <% event.event_feedbacks.ordered.each do |feedback| %>
                  <div class="feedback-entry">
                    <div class="entry-header">
                      <div class="entry-avatar">
                        <% if feedback.admin.avatar_url.present? %>
                          <img src="<%= feedback.admin.avatar_url %>" alt="<%= feedback.admin.full_name %> avatar">
                        <% else %>
                          <span><%= feedback.admin.full_name.first.upcase %></span>
                        <% end %>
                      </div>
                      <div>
                        <h3><%= feedback.admin.full_name %></h3>
                        <p><%= feedback.submitted_at.strftime('%B %d, %Y at %I:%M %p') %></p>
                      </div>
                    </div>
                    <p class="entry-body"><%= feedback.comments %></p>
                  </div>
                <% end %>
              <% else %>
                <p class="no-feedback">No feedback submitted for this event yet.</p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="feedback-empty-state">
        <h2>No events found for this selection.</h2>
        <p>Try adjusting the month or year to view other events.</p>
      </div>
    <% end %>
  </div>
</div>

