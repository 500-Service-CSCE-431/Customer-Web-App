<div class="directory-container">
  <div class="directory-card">
    <div class="directory-toolbar">
      <%= link_to 'Back to Calendar', home_path, class: 'back-button' %>
    </div>
    <div class="directory-header">
      <div class="directory-title">
        <h1>Organization Directory</h1>
        <p>Meet the admins and members who keep WIPS running.</p>
      </div>
    </div>

    <div class="directory-section">
      <div class="section-heading">
        <div class="section-label admin-label">Admins</div>
        <p class="section-description">Leadership team and primary contacts.</p>
      </div>

      <div class="profile-grid">
        <% if @admins.any? %>
          <% @admins.each do |admin| %>
            <div class="profile-card admin-card">
              <div class="profile-avatar">
                <% if admin.avatar_url.present? %>
                  <img src="<%= admin.avatar_url %>" alt="<%= admin.full_name %> avatar">
                <% else %>
                  <div class="placeholder-avatar"><%= admin.full_name.first.upcase %></div>
                <% end %>
              </div>
              <div class="profile-info">
                <h3><%= admin.full_name %></h3>
                <p class="profile-role">Administrator</p>
                <p class="profile-email"><%= admin.email %></p>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="empty-state">No admins have been added yet.</p>
        <% end %>
      </div>
    </div>

    <div class="divider">
      <div class="divider-line"></div>
      <div class="divider-dot"></div>
      <div class="divider-line"></div>
    </div>

    <div class="directory-section">
      <div class="section-heading">
        <div class="section-label member-label">Members</div>
        <p class="section-description">Members and volunteers supporting the mission.</p>
      </div>

      <div class="profile-grid">
        <% if @members.any? %>
          <% @members.each do |member| %>
            <div class="profile-card member-card">
              <div class="profile-avatar">
                <% if member.avatar_url.present? %>
                  <img src="<%= member.avatar_url %>" alt="<%= member.full_name %> avatar">
                <% else %>
                  <div class="placeholder-avatar"><%= member.full_name.first.upcase %></div>
                <% end %>
              </div>
              <div class="profile-info">
                <h3><%= member.full_name %></h3>
                <p class="profile-role">Member</p>
                <p class="profile-email"><%= member.email %></p>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="empty-state">No members are currently listed.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

